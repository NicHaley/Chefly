<!DOCTYPE html>
<html>
<head>
	<title>Chefly</title>
	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>

	<link href='http://fonts.googleapis.com/css?family=Arvo:400,700|Coustard:400,900' rel='stylesheet' type='text/css'>

	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<body>
	<nav>
		<div id="logo">
			<h3><%= link_to "Chefly", root_path %></h3>
		</div>
		<% if current_user %>
		<div class="sign-out">
			<div class="user-image"><%= image_tag current_user.avatar %><%= current_user.name.split(' ')[0] %></div>
			<ul>
				<hr>
				<li><%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></li>
			</ul>
		</div>
		<% else %>
		<%= link_to user_omniauth_authorize_path(:facebook) do %>
		<div class="button" id="sign-in"><i class="fa fa-facebook"></i> Sign-in</div> 
		<% end %>
		<% end %>
	</nav>

	<div>
		<%= yield %>
	</div>
</body>
</html>
