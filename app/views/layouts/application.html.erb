<!DOCTYPE html>
<html>
<head>
	<title>Chefly</title>
	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>

	<link href='http://fonts.googleapis.com/css?family=Arvo:400,700|Coustard:400,900' rel='stylesheet' type='text/css'>

</head>
<body>
	<nav>
		<div id="logo">
			<h3><%= link_to "Chefly", root_path %></h3>
		</div>
		<div class="sign-in">
			<% if current_user %>
				<div class="user-image"><%= image_tag current_user.avatar %><%= current_user.name.split(' ')[0] %></div>
				<ul>
				<hr>
					<li><%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></li>
				</ul>
			<% else %>
			<div id="sign-in">
				<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
			</div>
			<% end %>
		</div>
	</nav>

	<div>
		<%= yield %>
	</div>
</body>
</html>
