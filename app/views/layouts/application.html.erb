<!DOCTYPE html>
<html>
<head>
  <title>Chefly</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if current_user %>
		<%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %>
	<% else %>
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
	<% end %>

<%= yield %>

</body>
</html>
